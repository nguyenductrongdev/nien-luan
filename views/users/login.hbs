<style>
    .title {
        font-size: 4vw !important;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {{#if existErr}}
            <div class="alert alert-warning text-center" role="alert">
                Tên đăng nhập không tồn tại!
                <a class="btn btn-secondary btn-sm" href="/users/register/">Đăng ký
                    ngay</a>
            </div>
            {{/if}}
            {{#if matchMatKhauErr}}
            <div class="alert alert-warning text-center" role="alert">
                Mật khẩu không khớp!
            </div>
            {{/if}}
        </div>
    </div>
    <div class="row my-3">
        <div class="col-md-6 mx-auto">
            <h1 class="text-center title font-italic bg-dark text-light rounded">Đăng nhập</h1>
            <form class="my-3 shadow-lg p-5" id="frmRegister" name="frmRegister" action="/users/login" method="POST">
                <div class="form-group">
                    <label for="txtTenDangNhap">Tên đăng nhập:</label>
                    <input type="text" name="txtTenDangNhap" id="txtTenDangNhap" class="form-control"
                        placeholder="username..." id="email" autocomplete="off" autofocus>
                </div>
                <div class="form-group">
                    <label for="txtMatKhau">Mật khẩu:</label>
                    <input type="password" name="txtMatKhau" id="txtMatKhau" class="form-control"
                        placeholder="password...">
                </div>
                <button class="btn btn-primary form-control">Đăng nhập</button>
            </form>
        </div>
    </div>
</div>