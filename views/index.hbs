<div class="container">
    <div class="row my-3">
        <div class="col-md-2">
            <ul class="list-group list-group-flush">
                <li class="list-group-item p-3"><button class="btn btn-info btn-asc">Giá tăng dần</button></li>
                <li class="list-group-item p-3"><button class="btn btn-info btn-desc">Giá giảm dần</button></li>
            </ul>
        </div>
        <div class="col-md-10 d-flex justify-content-center">
            <div class="product-field">

            </div>
        </div>
    </div>
</div>

<script>
    axios.get('/api/')
        .then(response => response.data)
        .then(function (products) {
            $(function () {

                const productField = $('.product-field');
                let viewProducts = JSON.parse(JSON.stringify(products));
                const brands = {
                    APPLE: 'AP',
                    SAMSUNG: 'SS',
                    OPPO: 'OP',
                    VSMART: 'VS',
                    XIAOMI: 'XM',
                    NOKIA: 'NK',
                    ASSUS: 'AS'
                };

                function descCost(products) {
                    return Array.from(products.sort((a, b) => {
                        return +(b.LDT_GIA.replaceAll(',', '')) - +(a.LDT_GIA.replaceAll(',', ''));
                    }));
                }

                function ascCost(products) {
                    return Array.from(products.sort((a, b) => {
                        return +(a.LDT_GIA.replaceAll(',', '')) - +(b.LDT_GIA.replaceAll(',', ''));
                    }));
                }

                function filterBrand(products, brand) {
                    return Array.from(products.filter(product => {
                        return product.NSX_MA === brand;
                    }));
                }

                function render(products) {
                    let content = '';
                    for (let product of products) {
                        content +=
                            `<a href="/products/view-product?LDT_MA=${product.LDT_MA}" class="text-dark text-decoration-none">
                            <div class="card text-center shadow">
                                <img src="${product.HA_URL}" class="card-img-top" alt="abc">
                                <div class="card-body">
                                    <p class="card-title h5">${product.LDT_TEN}</p>
                                    <p class="card-text cost">${product.LDT_GIA}</p>
                                </div>
                            </div>
                        </a>`;
                    }
                    productField.html(content);
                }

                render(products);

                $('.btn-asc').click(function () {
                    render(ascCost(viewProducts));
                });


                $('.btn-desc').click(function () {
                    render(descCost(viewProducts));
                });

                $('.btn-brand').click(function () {
                    let brand = $(this).attr('data-brand');
                    viewProducts = filterBrand(products, brand);
                    render(viewProducts);
                });
            });
        });

</script>