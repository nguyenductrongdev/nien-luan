<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto my-5">
            <h1 class="text-center">Thêm nhà sản xuất</h1>
            <form class="shadow-lg p-5" id="frmAddBrand" name="frmAddBrand" action="/products/add-brand" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã</label>
                    <input type="text" class="form-control" name="txtMa" id="txtMa">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Tên</label>
                    <input type="text" class="form-control" name="txtTen" id="txtTen">
                </div>
                <button type="submit" class="btn btn-primary form-control">Thêm</button>
            </form>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#frmAddBrand').submit(function () {
            $('#txtMa').val('LN');
            $('#txtTen').val('Lenovo');

            $.post(`/api/products/add-brand?txtMa=${$('#txtMa').val()}&txtTen=${$('#txtTen').val()}`,
                function (data, status) {
                    alert("Data: " + JSON.stringify(data) + "\nStatus: " + status);
                });
            return false;
        });
    });
</script>