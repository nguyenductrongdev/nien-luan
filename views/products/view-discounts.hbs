<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Các chương trình khuyến mãi</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Tên</th>
                        <th>Hệ số</th>
                        <th>Ngày kết thúc</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each discounts }}
                    <tr>
                        <td>{{ this.CTKM_MA }}</td>
                        <td>{{ this.CTKN_TEN }}</td>
                        <td>{{ this.CTKM_HESO }}</td>
                        <td>{{ this.CTKM_NGAYKETTHUC }}</td>
                        <td><a href="/products/view-discount?ma={{ this.CTKM_MA }}"
                                class="text-decoration-none alert-dark bg-info text-dark p-1 rounded">
                                <i class="fas fa-eye" title="Xem chi tiết"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>